@inject ProductService productService
@inject HttpClient Http
@inject CartService cartService

@page "/products/{subcategory}"
@using Manero_Customer.Data.Models
@using Manero_Customer.Services
@using Manero_Customer.Components.SubComponents
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@rendermode InteractiveServer

<div class="container">
    <div class="shop">
        <h3>@SubCategory</h3>

        <div class="productContainer">
            @foreach (var item in products)
            {
                <div class="pCard">
                    <_ShopProductCard 
                        id="@item.Id"
                        ImageUrl="@item.ImageUrl"
                        Title="@item.Title"
                        Price="@item.Price"
                        DiscountPrice="@item.DiscountPrice"
                        Rating="@item.Rating"
                        OnSale="@item.OnSale"
                    />
                </div>
                //<button @onclick="() => AddToCartAsync(item)">Push It</button>
            }
        </div>
    </div>
</div>


@code {
    [Parameter]
    public string? SubCategory { get; set; }
    List<ProductModel> products = new();
    protected override async Task OnInitializedAsync()
    {
        try
        {
            var test = new Dictionary<string, string>
            {
                { "Subcategory",  SubCategory! }
            };
            products = await productService.FilterProduct(test);            
        }
        catch (Exception ex)
        {
            // Logga felet eller visa ett felmeddelande
            Console.Error.WriteLine($"Fel vid hämtning av produktdata: {ex.Message}");
        }
    }

    // private async Task AddToCartAsync(ProductModel Item)
    // {
