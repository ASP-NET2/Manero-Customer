@page "/subCategories/{categorie}"
@using Manero_Customer.Data.Models
@using Manero_Customer.Services
@inject HttpClient Http
@inject ProductService productService

<h3>Subcategories for @Categorie</h3>

@if (subcategories == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <ul>
        @foreach (var subcategory in subcategories)
        {
            <li>@subcategory</li>
        }
    </ul>
}

@code {
    [Parameter]
    public string? Categorie { get; set; }

    private List<string> subcategories = new List<string>();
    private List<ProductCategoryModel> products = new ();
    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await productService.GetProducts();

            foreach (var product in products)
            {
                if (product.Category == Categorie)
                {
                    if (subcategories.Contains(product.SubCategory!))
                    {
                        continue;
                    }
                    else
                    {
                        subcategories.Add(product.SubCategory!);
                    }
                }
            }

        }
        catch (Exception ex)
        {
            // Logga felet eller visa ett felmeddelande
            Console.Error.WriteLine($"Fel vid hämtning av produktdata: {ex.Message}");
        }
    }
}
